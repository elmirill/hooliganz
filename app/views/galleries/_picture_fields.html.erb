<div class="admin-add-photos nested-fields relative col-md-3 col-sm-4 col-xs-6">
	<%= f.input :image, input_html: { class: "form-input form-control image-submit" }, label: false %>
	<%= image_tag f.object.image.url(:thumb) %>
	<%= f.text_field :caption, class: "form-input form-control form", placeholder: "Описание" %>
	<%= f.text_field :alt, class: "form-input form-control form", placeholder: "Alt" %>
	<%= link_to_remove_association "Удалить", f, class: "btn btn-default side-button margin" %>
</div>