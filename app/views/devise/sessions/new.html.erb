<h2>Войти в админку</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
		<%= f.text_field :email, placeholder: 'Электропочта', class: 'form', required: false, autofocus: true %>

		<%= f.password_field :password, placeholder: 'Пароль', class: 'form', required: false %>
    <%= f.input :remember_me, inline_label: 'Запомнить меня', as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Войти" %>
  </div>
<% end %>

